<template name="articleItem">
  <view class='article-item'>
    <view class='article-head'>
      <image class='article-head-avatar' src='{{avatar}}'></image>
      {{author}}
      <text class='article-head-date'>{{time}}</text>
    </view>
    <text class='article-title'>{{title}}</text>
    <image class='article-img' src='{{img}}'></image>
    <text class='article-desc'>{{desc}}</text>
    <view class='article-footer'>
      <image class='article-footer-icon' src='/images/icon/car.jpg'></image>
      <text class='article-footer-text'>{{star}}</text>
      <image class='article-footer-icon' src='/images/icon/eyes.jpg'></image>
      <text class='article-footer-text'>{{eyes}}</text> 
    </view>
</view>
</template>
